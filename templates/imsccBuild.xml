    <macrodef name="contentList">
      <attribute name="fileName" default="imscc.content.xml"/>
      <attribute name="webcontentDir" default="imscc/webcontent"/>
      <sequential>
	<fileset id="cartridge.files.set" 
		 dir="@{webcontentDir}">
	  <include name="**/*"/>
	</fileset>
	<pathconvert pathsep="${line.separator}" 
		     property="cartridge.contents" 
		     refid="cartridge.files.set">
	  <mapper>
	    <regexpmapper from="@{webcontentDir}/(.*)" 
			  to="\1"/>
	  </mapper>
	</pathconvert>
	<echo file="@{fileName}" append="false">&lt;?xml version="1.0" encoding="UTF-8"?&gt;</echo>
	<echo file="@{fileName}" append="true">&lt;!DOCTYPE imscc SYSTEM "section.dtd"&gt;</echo>
	 
	<echo file="@{fileName}.tmp" append="false">${cartridge.contents}</echo>
	<replaceregexp file="@{fileName}.tmp"
		       flags="m"
		       byline="true"
		       match="^"
		       replace="&lt;file&gt;"/>
	<replaceregexp file="@{fileName}.tmp"
		       flags="m"
		       byline="true"
		       match="$"
		       replace="&lt;/file&gt;"/>
	<echo file="@{fileName}" append="true">&lt;imscc&gt;
	&lt;sem&gt;${sem}&lt;/sem&gt;
	&lt;title&gt;${courseTitle}: ${semester}&lt;/title&gt;
	&lt;author&gt;${courseName}&lt;/author&gt;
	&lt;courseName&gt;${courseName}&lt;/courseName&gt;
	&lt;files&gt;
	</echo>
	<concat destfile="@{fileName}" append="yes">
	  <filelist dir="." files="@{fileName}.tmp"/> 
	</concat>
	<echo file="@{fileName}" append="true">&lt;/files&gt;
	&lt;!--
	</echo>
	<concat destfile="@{fileName}" append="true">
	  <fileset dir="Directory/outline" includes="outline.xml"/>
	</concat>
	<concat destfile="@{fileName}" append="true">
	  <fileset dir="Directory/outline" includes="titleTable.xml"/>
	</concat>
	<replace file="@{fileName}" 
		 token="&lt;outline&gt;" 
		 value="--&gt; &lt;outline&gt;"/>
	<echo file="@{fileName}" append="true">&lt;/imscc&gt;</echo>
	<delete file="@{fileName}.tmp"/>
      </sequential>
    </macrodef>

