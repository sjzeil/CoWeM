\newsavebox\savedPic
\newlength{\savedPicwd}
\newlength{\savedRemainingwd}
\newlength{\savedPicht}

\newcommand{\@saveAndMeasure}[1]{\sbox\savedPic{#1}%
\settowidth{\savedPicwd}{\usebox{\savedPic}}%
\setlength{\savedRemainingwd}{\linewidth}%
\addtolength{\savedRemainingwd}{-1\savedPicwd}%
\addtolength{\savedRemainingwd}{-1em}%
\settoheight{\savedPicht}{\usebox{\savedPic}}}

\newcommand{\@saveAndMeasurePic}[2][0.4\linewidth]{\@saveAndMeasure{\includegraphics[max height=0.8\textheight,max width=#1]{#2}}}

\newcommand{\wrapPic}[2][40]{\@saveAndMeasurePic[0.#1\linewidth]{#2}\@wrapSavedPic}
\newcommand{\wrapPicture}[2][40]{\@saveAndMeasurePic[0.#1\linewidth]{#2}\@wrapSavedPic}

\newenvironment{picOnRight}[2][40]{\@saveAndMeasurePic[0.#1\linewidth]{#2}\needspace{\savedPicht}\begin{columns}[c]\begin{column}{\savedRemainingwd}}%
{\EL\end{column}\begin{column}{1ex}\rule{1ex}{0ex}\end{column}\begin{column}{\savedPicwd}\usebox{\savedPic}\end{column}\end{columns}}

\newenvironment{picOnLeft}[2][40]{\@saveAndMeasurePic[0.#1\linewidth]{#2}\needspace{\savedPicht}\begin{columns}[c]\begin{column}{\savedPicwd}\usebox{\savedPic}\end{column}\begin{column}{\savedRemainingwd}}%
{\EL\end{column}\end{columns}}

\newcommand{\centerPic}[2][90]{\@saveAndMeasurePic[0.#1\linewidth]{#2}\begin{minipage}{\linewidth}\begin{center}\usebox{\savedPic}\end{center}\end{minipage}}

\newlength{\savedColWidth}
\newlength{\splitColWidth}
\newenvironment{splitColumns}[1][50]{\begin{columns}%
\setlength{\splitColWidth}{0.#1\linewidth}%
\setlength{\savedColWidth}{\linewidth}%
\addtolength{\savedColWidth}{-1.01\splitColWidth}%
\begin{column}{\splitColWidth}}%
%
{\EL\end{column}\end{columns}}
\newcommand{\splitColumn}{\EL\end{column}\begin{column}{\savedColWidth}}

