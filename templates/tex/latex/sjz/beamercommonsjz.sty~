%  stringstyle=\color{blue}\slshape,
  backgroundcolor=\color{lightergray},
%  fancyvrb=true
   moredelim=**[is][\itshape\color{blue}]{<1i>}{</i>},
%   moredelim={**[is][\itshape\color{darkred}]{<1b>}{</b>}},
%   moredelim={**[is][\itshape\color{darkred}]{<1h>}{</h>}},
%   moredelim={**[is][\itshape\color{blue}]{<2h>}{</h>}},
%   moredelim={**[is][\itshape\color{magenta}]{<3h>}{</h>}}
}

\lstdefinestyle{cpplst}{
   language=C++,
   backgroundcolor=\color{lightergray},
   escapeinside={<:}{:>},
   basicstyle=\small,
   keywordstyle=\color{black}\bfseries,
   commentstyle=\color{darkgreen}\itshape,
   stringstyle=\color{blue}\slshape,
%  directivestyle=\color{magenta}\itshape
}

\lstdefinestyle{javalst}{
   language=Java,
   backgroundcolor=\color{lightergray},
   escapeinside={<:}{:>},
   basicstyle=\small,
   keywordstyle=\color{black}\bfseries,
   commentstyle=\color{darkgreen}\itshape,
   stringstyle=\color{blue}\slshape,
}

\lstdefinestyle{screenlst}{
   language=,
   basicstyle=\small,
   backgroundcolor=\color{lightblue},
   escapeinside={<:}{:>},
%  fancyvrb=true,
   moredelim={**[is][\itshape\color{blue}]{<1i>}{</i>}},
   moredelim={**[is][\itshape\color{darkred}]{<1b>}{</b>}},
   moredelim={**[is][\itshape\color{darkred}]{<+1>}{<-1>}},
   moredelim={**[is][\itshape\color{blue}]{<+2>}{<-2>}},
   moredelim={**[is][\itshape\color{magenta}]{<+3>}{<-3>}}
}


